
@model WriterMessage

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h3>Mesaj Gönder</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        @using (Html.BeginForm("CreateMessage", "AdminMessage", FormMethod.Post))
                        {
                            <div class="form-group">
                                @Html.Label("Alıcının Mail Adresi: ")
                                @Html.TextBoxFor(x => x.Receiver, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                @Html.Label("Konu: ")
                                @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                @Html.Label("Mesaj: ")
                                @Html.TextAreaFor(x => x.MessageContent, 10, 6, new { @class = "form-control" })
                            </div>
                            <button type="submit" class="btn btn-primary">Mesaj Gönder</button>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


