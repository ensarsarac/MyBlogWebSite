@model Service

@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-lg-12">
            <h1>Hizmet Ekleme Sayfası</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">


                    @using (Html.BeginForm("UpdateService", "Service", FormMethod.Post))
                    {
                        @Html.HiddenFor(x => x.ServideID)
                        <div class="form-group">
                            <label class="form-label">Başlık:</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        <div class="form-group">
                            <label class="form-label">Resim:</label>
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.ImageUrl, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        <button class="btn btn-primary" type="submit">Hizmet Güncelle</button>
                        <a href="/Service/Index/" class="btn btn-secondary ml-3">İptal</a>
                    }





                </div>
            </div>
        </div>
    </div>
</div>


