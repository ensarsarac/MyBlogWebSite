@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}




<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h3>Hizmet Listesi Tablosu</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-dark">
                            <thead>
                                <tr>
                                    <th> # </th>
                                    <th> Başlık </th>
                                    <th> Sil </th>
                                    <th> Düzenle </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">
                                            @item.ServideID
                                        </th>
                                        <td class="budget">
                                            @item.Title
                                        </td>
                                       


                                        <td>
                                            <a href="/Service/DeleteService/@item.ServideID/" class="btn btn-danger">Sil</a>
                                        </td>
                                        <td>
                                            <a href="/Service/UpdateService/@item.ServideID/" class="btn btn-success">Düzenle</a>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>


</div>
<a href="/Service/AddService/" class="btn btn-primary m-3">Yeni Hizmet Ekle</a>
