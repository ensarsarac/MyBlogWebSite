@model List<Experience>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}



<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h3>Deneyim Listesi Tablosu</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-dark">
                            <thead>
                                <tr>
                                    <th> # </th>
                                    <th> Deneyim Adı </th>
                                    <th> Deneyim Tarih </th>
                                    <th> Deneyim İçerik </th>
                                    <th> Sil </th>
                                    <th> Düzenle </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">
                                            @item.ExperienceID
                                        </th>
                                        <td class="budget">
                                            @item.Name
                                        </td>
                                        <td>
                                            @item.Date

                                        </td>


                                        @if (item.Description.Length < 50)
                                        {
                                            <td>@item.Description</td>
                                        }
                                        else
                                        {
                                            <td> @item.Description.Substring(0, 50) ... </td>
                                        }



                                        <td>
                                            <a href="/Experience/DeleteExperience/@item.ExperienceID/" class="btn btn-danger">Sil</a>
                                        </td>
                                        <td>
                                            <a href="/Experience/UpdateExperience/@item.ExperienceID/" class="btn btn-success">Düzenle</a>
                                        </td>
                                    </tr>
                                }


                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


<a href="/Experience/AddExperience/" class="btn btn-primary m-3">Yeni Deneyim Ekle</a>
