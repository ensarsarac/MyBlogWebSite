@model Experience


@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-lg-12">
            <h1>Deneyim Ekleme Sayfası</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    @using (Html.BeginForm("AddExperience", "Experience", FormMethod.Post))
                    {

                        <div class="form-group">
                            <label class="form-label">Deneyimin Adı:</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        <div class="form-group">
                            <label class="form-label">Deneyim Tarihi:</label>
                            @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Date, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        <div class="form-group">
                            <label class="form-label">Deneyim Açıklaması:</label>
                            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
                        </div>

                        <br />
                        <button class="btn btn-primary" type="submit">Deneyim Kaydet</button>
                        <a href="/Experience/Index/" class="btn btn-secondary ml-3">İptal</a>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
