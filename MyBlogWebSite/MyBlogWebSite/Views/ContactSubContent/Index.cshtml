
@model List<Contact>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h3>İletişim Kanallarım Paneli</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-dark">
                            <thead>
                                <tr>
                                    <th> # </th>
                                    <th> Başlık </th>
                                    <th> Mail </th>
                                    <th> Telefon </th>
                                    <th>Durum</th>
                                    <th>Aktif</th>
                                    <th>Pasif
                                    </th>
                                    <th> Sil </th>
                                    <th> Detaylar </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                <tr>
                                    <th>
                                        @item.ContactID
                                    </th>
                                    <td>
                                        @item.Title
                                    </td>
                                    <td>
                                        @item.Mail

                                    </td>
                                    <td>
                                        @item.Phone

                                    </td>

                                    @if (item.Status)
                                    {
                                        <td class="text-info">Aktif</td>
                                    }
                                    else
                                    {
                                        <td class="text-danger">Pasif</td>
                                    }
                                    <td>
                                        <a href="/ContactSubContent/Active/@item.ContactID/" class="btn btn-outline-info">Aktif Yap</a>
                                    </td>
                                    <td>
                                        <a href="/ContactSubContent/Passive/@item.ContactID/" class="btn btn-outline-info">Pasif Yap</a>
                                    </td>

                                    <td>
                                        <a href="/ContactSubContent/Delete/@item.ContactID/" class="btn btn-danger">Sil</a>
                                    </td>
                                    <td>
                                        <a href="/ContactSubContent/Update/@item.ContactID/" class="btn btn-success">Detay</a>
                                    </td>
                                </tr>
                                }



                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


<a href="/ContactSubContent/Add/" class="btn btn-primary m-3">Yeni İletişim Bilgisi Ekle</a>
