
@model TestimonialViewModel

<button type="button" class="btn w-25 btn-outline-primary" data-bs-toggle="modal" data-bs-target="#Modal1">Referans Ekle</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Referans Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" action="/Default/AddTestimonial/" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="form-group">
                        <label class="form-label">Adınız Soyadınız: </label>
                        @Html.TextBoxFor(x => x.ClientName, new { @class = "form-control" })
                    </div>
                    <div class="form-group mt-3">
                        <label class="form-label">Ünvanınız / Şirketiniz: </label>
                        @Html.TextBoxFor(x => x.Company, new { @class = "form-control" })
                    </div>

                    <div class="form-group mt-3">
                        <label class="form-label">Ünvanınız / Şirketiniz: </label>
                        @Html.TextAreaFor(x => x.Comment, 7, 6, new { @class = "form-control" })
                    </div>

                    <div class="form-group mt-3">
                        <label class="form-label">Resim Ekleyin: </label>
                        <input type="file" name="ImageUrl" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
