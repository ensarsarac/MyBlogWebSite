@model Message


<div class="col-md-6" data-aos="zoom-in" data-aos-delay="100">
    <div class="bg-light my-2 p-3 pt-2">
            <div class="form-group my-2">
                <label for="name" class="form-label fw-bolder">Adınız</label>
                <input class="form-control" id="name" required>
            </div>
            <div class="form-group my-2">
                <label for="email" class="form-label fw-bolder">Mail</label>
                <input class="form-control" id="mail" required>

            </div>
            <div class="form-group my-2">
                <label for="message" class="form-label fw-bolder">Mesajınız</label>
                <textarea class="form-control" id="message" style="resize: none;" required rows="4"></textarea>

            </div>
            <button class="btn btn-primary mt-2" id="btnn" type="button">Gönder</button>
    </div>
</div>

<script>
    console.log("deneme");

    document.querySelector("#btnn").addEventListener("click", function () {
        let name = $("#name").val();
        let mail = $("#mail").val();
        let details = $("textarea#message").val();
        console.log(name);
        console.log(mail);
        console.log(details);
        let values = {
            Name: name,
            Mail: mail,
            Content: details
        };
        $.ajax({
            
            type: "post",
            url: "/Default/SendMessage/",
            data: values,

            success: function (func) {
                let result = jQuery.parseJSON(func);
                alert(name + ", mesajınız başarılı bir şekilde gönderildi.");
                $("#name").val(" ");
                $("#mail").val(" ");
                $("textarea#message").val(" ");
            }

           
        });
    });

</script>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>