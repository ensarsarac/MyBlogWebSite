
@model List<SocialMedia>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}



<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h3>Sosyal Medya Tablosu</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-dark">
                            <thead>
                                <tr>
                                    <th> # </th>
                                    <th> Başlık </th>
                                    <th> Sil </th>
                                    <th> Düzenle </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>
                                            @item.SocialMediaID
                                        </th>
                                        <td class="budget">
                                            @item.Name
                                        </td> 
                                        <td>
                                            <a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaID/" class="btn btn-danger">Sil</a>
                                        </td>
                                        <td>
                                            <a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaID/" class="btn btn-success">Düzenle</a>
                                        </td>
                                    </tr>
                                }


                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


<a href="/SocialMedia/AddSocialMedia/" class="btn btn-primary m-3">Yeni Sosyal Medya Hesabı Ekle</a>
