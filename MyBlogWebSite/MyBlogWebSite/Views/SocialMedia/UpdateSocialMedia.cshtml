
@model SocialMedia

@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-lg-12">
            <h1>Sosyal Medya Hesabı Düzenle Sayfası</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    @using (Html.BeginForm("UpdateSocialMedia", "SocialMedia", FormMethod.Post))
                    {
                        @Html.HiddenFor(x=>x.SocialMediaID)
                        <div class="form-group">
                            <label class="form-label">Sosyal Medya Platformu:</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                        </div>

                        <br />
                        <div class="form-group">
                            <label class="form-label">URL:</label>
                            @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
                        </div>
                        <br />
                        <div class="form-group">
                            <label class="form-label">Icon:</label>
                            @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })
                        </div>

                        <br />
                        <button class="btn btn-primary" type="submit">Kaydet</button>
                        <a href="/SocialMedia/Index/" class="btn btn-secondary ml-3">İptal</a>
                    }

                </div>
            </div>
        </div>
    </div>
    </div>
