@model Feature

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="">Öne Çıkan Düzenleme Sayfası</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">


                    @using (Html.BeginForm("Index", "Feature", FormMethod.Post))
                    {
                        @Html.HiddenFor(x => x.FeatureID)
                        <div class="form-group">
                            <label class="form-label">Başlık</label>
                            @Html.TextBoxFor(x => x.Header, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Header, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label class="form-label">Ad Soyad</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label class="form-label">Görev</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label class="form-label">Instagram</label>
                            @Html.TextBoxFor(x => x.InstagramUrl, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label class="form-label">Twitter</label>
                            @Html.TextBoxFor(x => x.TwitterUrl, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label class="form-label">LinkedIn</label>
                            @Html.TextBoxFor(x => x.LinkedinUrl, new { @class = "form-control" })
                        </div>

                        <button class="btn btn-primary" type="submit">Öne Çıkan Postu Güncelle</button>



                    }



                </div>
            </div>
        </div>
    </div>
</div>
