@model List<Message>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}



<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h3>İletişim Kutusu</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-dark">
                            <thead>
                                <tr>
                                    <th> # </th>
                                    <th> Gönderen </th>
                                    <th> Tarih </th>
                                    <th> Sil </th>
                                    <th> Mesajı Gör </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">
                                            @item.MessageID
                                        </th>
                                        <td class="budget">
                                            @item.Name
                                        </td>
                                        <td>
                                            @item.Date.ToString("dd-MMM-yyyy")

                                        </td>
                                        <td>
                                            <a href="/Message/DeleteMessage/@item.MessageID/" class="btn btn-danger">Sil</a>
                                        </td>
                                        <td>
                                            <a href="/Message/MessageDetails/@item.MessageID/" class="btn btn-success">Mesajı Gör</a>
                                        </td>
                                    </tr>
                                }


                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


