
@model WriterMessage

@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <h2>Mesaj Gönder</h2>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            @using (Html.BeginForm("SendMessage", "Message", FormMethod.Post))
            {

             

                <div class="form-group">
                    @Html.Label("Alıcının Mail Adresi: ")
                    @Html.TextBoxFor(x => x.Receiver, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.Label("Konu: ")
                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.Label("Mesaj: ")
                    @Html.TextAreaFor(x => x.MessageContent, 10, 6, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary">Mesaj Gönder</button>
            }

        </div>
    </div>
</div>
