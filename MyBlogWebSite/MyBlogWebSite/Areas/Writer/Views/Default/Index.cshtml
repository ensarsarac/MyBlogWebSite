
@model List<Announcement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Duyurular</h4>

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Başlık</th>
                                    <th>Tarih</th>
                                    <th>Durum</th>
                                    <th>İçerik</th>
                                    <th>Detaylar</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ID</td>
                                        <td>@item.Title</td>
                                        <td>@item.Date.ToString("dd-MM-yyyy")</td>
                                        @if (item.Status == true)
                                        {
                                            <td><label class="badge badge-success">@item.Status</label></td>

                                        }
                                        else
                                        {
                                            <td><label class="badge badge-danger">@item.Status</label></td>

                                        }
                                        @if (item.Content.Length < 30)
                                        {
                                            <td>@item.Content</td>
                                        }
                                        else
                                        {
                                            <td>@item.Content.Substring(0, 30) ...</td>
                                        }
                                        <td><a href="/Writer/Default/Details/@item.ID/" class="btn btn-outline-twitter">Detaylar</a></td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

